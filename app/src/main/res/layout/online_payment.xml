<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
                android:id="@+id/ll_title_bar_online_payment"
                android:background="@color/title_bar_bg"
                android:gravity="center_vertical"
                android:clipToPadding="true"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10">
            <ImageView
                    android:id="@+id/iv_back_online_payment"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/back"
                    android:layout_marginLeft="10dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>

            <TextView
                    android:text="@string/online_payment"
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/tv_exit_online_payment"
                    android:text="@string/exit"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/payment_center"
                    android:textSize="18sp"
                    android:layout_margin="10dp"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                <LinearLayout
                        android:id="@+id/ll_property_cost_payment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:background="@drawable/item_bg"
                        android:clickable="true">
                    <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/property_cost_payment"
                            android:layout_marginBottom="5dp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/property_cost_payment"
                            android:gravity="center_horizontal"
                            android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/ll_parking_space_payment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:background="@drawable/item_bg"
                        android:clickable="true">
                    <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/parking_space_payment"
                            android:layout_marginBottom="5dp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/parking_space_payment"
                            android:gravity="center_horizontal"
                            android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/ll_self_payment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_margin="10dp"
                        android:background="@drawable/item_bg"
                        android:clickable="true">
                    <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/self_payment"
                            android:layout_marginBottom="5dp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/self_payment"
                            android:gravity="center_horizontal"
                            android:textSize="15sp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <LinearLayout
                        android:id="@+id/ll_my_payment_record"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:background="@drawable/item_bg"
                        android:clickable="true">
                    <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/my_payment_record"
                            android:layout_marginBottom="5dp"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/my_payment_record"
                            android:gravity="center_horizontal"
                            android:textSize="15sp"/>
                </LinearLayout>

                <View
                        android:layout_margin="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                <View
                        android:layout_margin="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
