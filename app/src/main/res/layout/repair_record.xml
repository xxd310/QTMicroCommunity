<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/rl_title_bar_repair_record"
            android:background="@color/title_bar_bg"
            android:clipToPadding="true"
            android:fitsSystemWindows="true"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">
        <ImageView
                android:id="@+id/iv_back_repair_record"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/back"
                android:layout_marginLeft="10dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

        <TextView
                android:id="@+id/tv_title_repair_record"
                android:text="@string/repair_record"
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="90"
            android:orientation="vertical">

        <LinearLayout
                android:id="@+id/ll_repair_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal" >

            <TextView
                    android:id="@+id/tv_family_record_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="@string/family_repair"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:textSize="16sp" />

            <TextView
                    android:id="@+id/tv_common_record_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="10dip"
                    android:text="@string/common_repair"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:textSize="16sp" />
        </LinearLayout>

        <View
                android:id="@+id/v_line"
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_marginTop="-5dp"
                android:background="@color/title_bar_bg" />

        <android.support.v4.view.ViewPager
                android:id="@+id/vp_repair_record"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>